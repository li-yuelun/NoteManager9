@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>聊天用户首页</title>
    <script src="~/Jquery/jquery-3.3.1.js"></script>
    <link rel="stylesheet" href="~/layui/css/layui.css" media="all">
    <script src="~/layui/layui.js" charset="utf-8"></script>
    <!-- 注意：如果你直接复制所有代码到本地，上述js路径需要改成你本地的 -->
    <script type="text/html" id="barDemo">
        <a class="layui-btn layui-btn-xs" lay-event="detail">查看</a>
        <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
    </script>
    <script>
        //json中的date转换
        function ChangeDateFormat(cellval) {
            var date = new Date(parseInt(cellval.replace("/Date(", "").replace(")/", ""), 10));
            var month = date.getMonth() + 1 < 10 ? "0" + (date.getMonth() + 1) : date.getMonth() + 1;
            var currentDate = date.getDate() < 10 ? "0" + date.getDate() : date.getDate();
            return date.getFullYear() + "-" + month + "-" + currentDate + "  " + date.getHours() + ":" + date.getMinutes() + ":" + date.getSeconds();
        }
        layui.use(['util', 'table'], function () {
            var table = layui.table;
            var util = layui.util;
            table.render({
                elem: '#test'
                , url: '/ChatUser/GetData'
                , cellMinWidth: 80 //全局定义常规单元格的最小宽度，layui 2.2.1 新增
                , page: true //开启分页
                , parseData: function (res) {
                    return {
                        "code": 0,
                        "msg": "",
                        "count": 10,
                        "data": res
                    };
                }
                , cols: [[
                    { field: 'Id', title: 'ID', sort: true }
                    , { field: 'ChatName', title: '聊天名字' }
                    , { field: 'ConnectionId', title: '聊天对象的connectionId' }
                    , { field: 'Password', title: '密码' }
                    , { field: 'IsOnline', title: '是否在线' }
                    , { field: 'IsDeleted', title: '删除标记' }
                    , { field: 'CreateTime', title: '创建时间', sort: true, templet: function (d) { return util.toDateString(d.commPosttime * 1000, "yyyy-MM-dd HH:mm:ss"); } } //minWidth：局部定义当前单元格的最小宽度，layui 2.2.1 新增
                    , { field: '', title: '操作', toolbar: '#barDemo' }
                ]]
                , id: 'testReload'
            });
            table.on('tool(test)', function (obj) { //注：tool 是工具条事件名，test 是 table 原始容器的属性 lay-filter="对应的值"
                var data = obj.data; //获得当前行数据
                var layEvent = obj.event; //获得 lay-event 对应的值（也可以是表头的 event 参数对应的值）
                var tr = obj.tr; //获得当前行 tr 的 DOM 对象（如果有的话）
                //查看
                if (layEvent === 'detail') {
                    //do somehing
                    layer.alert('连天对象：<br>' + JSON.stringify(data))
                }
                //删除
                else if (layEvent === 'del') {
                    layer.confirm('真的删除行么', function (index) {
                        obj.del(); //删除对应行（tr）的DOM结构，并更新缓存
                        layer.close(index);
                        location.href = "/ChatUser/Delete?Id=" + data.Id;
                    });
                }
                //编辑
                else if (layEvent === 'edit') {
                    location.href = "/ChatUser/Update?Id=" + data.Id;
                }
                else if (layEvent === 'LAYTABLE_TIPS') {
                    layer.alert('Hi，头部工具栏扩展的右侧图标。');
                }
            });
            var $ = layui.$,
            active = {
                reload: function () {
                    var ChatName = $('#ChatName').val();
                    var Password = $('#Password').val();
                    //执行重载
                    table.reload('testReload', {
                        page: {
                            curr: 1 //重新从第 1 页开始
                        }
                        , where:{
                            ChatName: ChatName
                           ,Password:Password
                        }
                    }, 'data');
                }
            };
            //搜索
            $('.demoTable .layui-btn').on('click', function () {
                var type = $(this).data('type');
                active[type] ? active[type].call(this) : '';
            });
        });
    </script>
</head>
<body>
    <div class="demoTable">
        聊天名字：<div class="layui-inline">
            <input class="layui-input" name="ChatName" id="ChatName" autocomplete="off">
        </div>
        聊天密码：<div class="layui-inline">
            <input class="layui-input" name="Password" id="Password" autocomplete="off">
        </div>
        <button class="layui-btn" data-type="reload">搜索</button>
    </div>
    <table class="layui-hide" id="test" lay-filter="test"></table>
</body>
</html>