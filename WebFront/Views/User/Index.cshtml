@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>用户管理</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <link rel="stylesheet" href="~/layui/css/layui.css" media="all">
    <script src="~/layui/layui.js" charset="utf-8"></script>
    <script src="~/Jquery/jquery-3.3.1.js"></script>
    <script type="text/html" id="barDemo">
        <a class="layui-btn layui-btn-xs" lay-event="detail">查看</a>
        <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
    </script>
    <script>
        layui.use(['util', 'table'], function () {
            var table = layui.table;
            var util = layui.util;
            table.render({
                elem: '#test'
                , url: '/User/GetData'
                , cellMinWidth: 80 //全局定义常规单元格的最小宽度，layui 2.2.1 新增
                , page: true //开启分页
                , parseData: function (res) {
                    return {
                        "code": 0,
                        "msg": "",
                        "count": 10,
                        "data": res
                    };
                }
                , cols: [[
                    { field: 'Id', title: 'ID', sort: true }
                    , { field: 'Name', title: '用户名' }
                    , { field: 'Password', title: '密码' }
                    , { field: 'IsDeleted', title: '删除标记' }
                    , { field: 'CreateTime', title: '创建时间', sort: true, templet: function (d) { return util.toDateString(d.commPosttime * 1000, "yyyy-MM-dd HH:mm:ss"); }  } //minWidth：局部定义当前单元格的最小宽度，layui 2.2.1 新增
                    , { field: '', title: '操作', toolbar: '#barDemo' }
                ]]
                , id: 'testReload'
            });
            table.on('tool(test)', function (obj) { //注：tool 是工具条事件名，test 是 table 原始容器的属性 lay-filter="对应的值"
                var data = obj.data; //获得当前行数据
                var layEvent = obj.event; //获得 lay-event 对应的值（也可以是表头的 event 参数对应的值）
                var tr = obj.tr; //获得当前行 tr 的 DOM 对象（如果有的话）
                //查看
                if (layEvent === 'detail') {
                    //do somehing
                    location.href = "/User/ShowUserRolePower?Id=" + data.Id;
                }
                //删除
                else if (layEvent === 'del') {
                    layer.confirm('真的删除行么', function (index) {
                        obj.del(); //删除对应行（tr）的DOM结构，并更新缓存
                        layer.close(index);
                        //向服务端发送删除指令
                        //table.reload('test', {
                        //    url: '/User/Delete',
                        //    where: {
                        //        Id: data.Id
                        //    }
                        //});
                        location.href = "/User/Delete?Id=" + data.Id;
                    });
                }
                //编辑
                else if (layEvent === 'edit') {
                    //do something
                    //table.reload('test', {
                    //    url: '/User/Update',
                    //    where: {
                    //        Id: data.Id
                    //    }
                    //});
                    //同步更新缓存对应的值
                    //obj.update({
                    //    username: '123'
                    //    , title: 'xxx'
                    //});
                    location.href = "/User/Update?Id=" + data.Id;
                }
                else if (layEvent === 'LAYTABLE_TIPS') {
                    layer.alert('Hi，头部工具栏扩展的右侧图标。');
                }
            });
            var $ = layui.$, active = {
                reload: function () {
                    var Name = $('#Name').val();
                    //执行重载
                    table.reload('testReload', {
                        page: {
                            curr: 1 //重新从第 1 页开始
                        }
                        , where: {
                            Name: Name
                        }
                    }, 'data');
                }
            };
            //搜索
            $('.demoTable .layui-btn').on('click', function () {
                var type = $(this).data('type');
                active[type] ? active[type].call(this) : '';
            });
        });
    </script>
</head>
<body>
    <div class="demoTable">
        名字：<div class="layui-inline">
            <input class="layui-input" name="Name" id="Name" autocomplete="off">
        </div>
        <button class="layui-btn" data-type="reload" id="search">搜索</button>
    </div>
    <table class="layui-hide" id="test" lay-filter="test"></table>
</body>
</html>